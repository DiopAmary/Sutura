{% extends 'base.html.twig' %}

{% block title %}Etudiant index{% endblock %}

{% block body %}
    <h1>Etudiant index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Sexe</th>
                <th>PaysOrigine</th>
                <th>Email</th>
                <th>NombreAnneeMaroc</th>
                <th>Date</th>
                <th>NumTelephone</th>
                <th>VilleEtude</th>
                <th>Etablissement</th>
                <th>Filiere</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for etudiant in etudiants %}
            <tr>
                <td>{{ etudiant.id }}</td>
                <td>{{ etudiant.nom }}</td>
                <td>{{ etudiant.prenom }}</td>
                <td>{{ etudiant.sexe }}</td>
                <td>{{ etudiant.paysOrigine }}</td>
                <td>{{ etudiant.email }}</td>
                <td>{{ etudiant.nombreAnneeMaroc }}</td>
                <td>{{ etudiant.date ? etudiant.date|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ etudiant.numTelephone }}</td>
                <td>{{ etudiant.villeEtude }}</td>
                <td>{{ etudiant.Etablissement }}</td>
                <td>{{ etudiant.Filiere }}</td>
                <td>
                    <a href="{{ path('etudiant_show', {'id': etudiant.id}) }}">show</a>
                    <a href="{{ path('etudiant_edit', {'id': etudiant.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="13">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('etudiant_new') }}">Create new</a>
{% endblock %}
